<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/titleAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:text="AuditorÃ­a:"/>

            <TextView
                android:id="@+id/auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/titleAuto"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/titleBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titleAuto"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="Sucursal:"/>

            <TextView
                android:id="@+id/branch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/titleBranch"
                app:layout_constraintStart_toEndOf="@id/titleBranch"
                app:layout_constraintBottom_toBottomOf="@id/titleBranch"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/titleDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titleBranch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/date1"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="Fecha plan:"/>

            <TextView
                android:id="@+id/date1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/titleDate1"
                app:layout_constraintStart_toEndOf="@id/titleDate1"
                app:layout_constraintBottom_toBottomOf="@id/titleDate1"
                app:layout_constraintEnd_toStartOf="@id/titleDate2"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/titleDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/date1"
                app:layout_constraintStart_toEndOf="@id/date1"
                app:layout_constraintEnd_toStartOf="@id/date2"
                app:layout_constraintBottom_toBottomOf="@id/date1"
                android:textColor="@color/black"
                android:text="Fecha plan:"/>

            <TextView
                android:id="@+id/date2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/titleDate2"
                app:layout_constraintStart_toEndOf="@id/titleDate2"
                app:layout_constraintBottom_toBottomOf="@id/titleDate2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>